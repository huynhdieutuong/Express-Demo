extends ../layouts/common 
block content
  h1 Login
  if errors
    each error in errors
      .alert.alert-danger= error
  .row
    form.col-md-4(action="/auth/login", method="post")
      input.form-control.mb-2(type="email", name="email", placeholder="Email", value= values ? values.email : '')
      input.form-control.mb-2(type="password", name="password", placeholder="Password", value= values ? values.password : '')
      button.btn.btn-primary Login